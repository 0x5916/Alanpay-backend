{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker: Build and Compose Up",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Docker: Build",
                "Docker Compose Up"
            ],
            "group": "build"
        },
        {
            "label": "Docker: Build",
            "type": "shell",
            "command": "docker build -t alanpay-backend .",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Docker Compose Up",
            "type": "shell",
            "command": "docker-compose up -d",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Docker Compose Up DB",
            "type": "shell",
            "command": "docker-compose up alanpay_db -d",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Docker Compose Down",
            "type": "shell",
            "command": "docker-compose down",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
